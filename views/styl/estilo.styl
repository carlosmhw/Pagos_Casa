.mensaje 
	position relative
	width 100%
	height 60px 
	margin 0 auto 
	padding-left 5px 

.a_mailto
	text-decoration none 
	color #848484
	&:hover 
		color #BDBDBD
		transition-duration 0.3s
	
	
.info-circle:before
	content "\f05a" 
	font-family "FontAwesome"
	color #3A3A3A
	font-size 50px 

.p_info 
	margin-left 55px 
	margin-top -45px
	color #3A3A3A
	

blockquote {
  background: #f9f9f9;
  border-left: 10px solid #ccc;
  //margin: 1.5em 10px;
  padding: 0.5em 10px;
  quotes: "\201C""\201D""\2018""\2019";
  margin auto
  margin-left -5px     
}
blockquote:before {
  color: #ccc;
  content: open-quote;
  font-size: 4em;
  line-height: 0.1em;
  margin-right: 0.25em;
  vertical-align: -0.4em;
}
blockquote p {
  display: inline;
  color gris_oscuro
  font-style italic
  font-weight bold
  
}

	 
	
input, label, button  
	width 100%  
	margin-bottom 20px 
	padding 7px 
	box-sizing border-box
	border none 
	color #3A3A3A 
	text-align center 


label
	margin-left -7px
input 
	outline none 
	margin-top 5px 
	color #666 
	border 1px solid #aaa
	box-shadow 0px 0px 3px #ccc, 0 10px 15px #eee inset
	border-radius 2px
	&:focus 
		background #fff
		border 1px solid #555
 		box-shadow 0 0 3px #aaa
 		outline none 
 		
.checkbox_input
	width 7px 
.checkbox_label
	cursor pointer 
	color #3A3A3A
	

.terminos_condiciones 
	text-decoration none 
	color #848484
	&:hover 
		color #BDBDBD
		transition-duration 0.3s 
		


label 
	input[type="checkbox"] 
		display none 		
		+ .label-text:before
			content "\f096"
			font-family "FontAwesome"
			speak none 
			font-style normal 
			font-weight normal
			font-variant normal
			text-transform none 
			line-height 1
			-webkit-font-smoothing antialiased 
			width 1em 
			display inline-block 
			margin-right 5px 
			font-size 18px 
		&:checked + .label-text:before
			content "\f14a"
			color #00D079
			animation pulse 180ms ease-in
					
		&:disabled + .label-text
			color #aaa
			&:before 
				content "\f0c8"
				color #ccc   
						

.mensaje_error
	color white 
	text-align left
	font-weight bold 
	width 100% 
	margin 0 auto  
	height 50px 
	background #FF4200
	margin-top 10px 
	margin-bottom 5px 

.warning
	margin-left 7px 
	&:before 
		content "\f06a"
.p_credenciales_invalidas
	margin-left 55px 
	margin-top -48px	


#btn_accept, .btn_agregar
	width 100% 
	text-align center 
	text-decoration none 
	display inline-block
	color #FFF
	background #2ECC71
	box-shadow 0px 5px 0px 0px #27AE60
	padding 15px 40px 
	white-space nowrap
	margin-top 10px 
	-webkit-transition all 0.2s ease-in-out
	-ms-transition all 0.2s ease-in-out
	-moz-transition all 0.2s ease-in-out
	-o-transition all 0.2 ease-in-out
	transition all 0.2s ease-in-out
	&:hover 
		background #32db78
	&:disabled
		background #6E6E6E
		box-shadow 0px 5px 0px 0px #585858
		

