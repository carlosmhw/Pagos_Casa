	height auto 
	position absolute
	left 0
	top 10px 

.titulo 
	color white 
	text-align center 
	margin-top -20px 
	margin-bottom -20px 
	font-size 22px

.subtitulo 
	color white 
	text-align center 
	
.tituloAntivirus 
	display none 
	
//Termina Header

//Inicia contenedor principal 
	
.container
