@import "normalize.styl"
@import "font-awesome.min.styl"
col_header = #3A3A3A
gris_oscuro = #BDBDBD
amarillo_pagos = #FFC000
col_guinda = #BD2425

@keyframes pulse
	0% {transform: scale(0);}
	75% {transform: scale(1.4);}
	100% {transform: scale(1);}

